@using Heavy.Web.ViewModels
@model RoleEditViewModel

<form method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Id" />
            <span class="invalid" asp-validation-for="Id"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="RoleName" />
            <span class="invalid" asp-validation-for="RoleName"></span>
        </div>
    </div>

    <div class="invalid" asp-validation-summary="ModelOnly"></div>

    <button type="submit" class="btn btn-primary">submit</button>
    <a asp-action="Index" class="btn btn-secondary">return to list</a>
</form>

<h3>Users in role</h3>
<ul>
    @foreach(var user in Model.Users)
    {
        <li>@user</li>
    }
</ul>

<a asp-action="AddUserToRole" asp-route-roleId="@Model.Id" class="btn btn-secondary">add users to role</a>
<a asp-action="RemoveUserToRole" asp-route-roleId="@Model.Id" class="btn btn-secondary">Remove users to role</a>